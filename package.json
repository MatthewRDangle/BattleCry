{
  "name": "@matthewrdangle/battlecry",
  "author": "Matthew R. Dangle",
  "description": "An engine to create, share, and play interactive 2D head-to-head scenarios for war-based board games.",
  "license": "GPL-2.0",
  "main": "startup.js",
  "homepage": "https://github.com/MatthewRDangle/battlecry#readme",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron . dev && npm run watch:tailwindcss",
    "build:tailwindcss": "tailwindcss build -i renderer/stylesheets/_tailwind.css -o renderer/stylesheets/tailwind.css",
    "watch:tailwindcss": "tailwindcss build -i renderer/stylesheets/_tailwind.css -o renderer/stylesheets/tailwind.css --watch",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MatthewRDangle/battlecry.git"
  },
  "bugs": {
    "url": "https://github.com/MatthewRDangle/battlecry/issues"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.0",
    "@electron-forge/maker-deb": "^6.1.0",
    "@electron-forge/maker-rpm": "^6.1.0",
    "@electron-forge/maker-squirrel": "^6.1.0",
    "@electron-forge/maker-zip": "^6.1.0",
    "autoprefixer": "^10.4.7",
    "electron": "^23.2.0",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.2.6"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "electron-squirrel-startup": "^1.0.0",
    "mithril": "^2.0.4"
  },
  "version": "1.0.0-alpha.0"
}
