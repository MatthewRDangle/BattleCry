{
  "name": "battlecry",
  "version": "1.0.0",
  "description": "War Digital Campaign Companion.",
  "main": "startup.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . dev && npm run watch:tailwindcss",
    "build:tailwindcss": "tailwindcss build -i src/stylesheets/_tailwind.css -o src/stylesheets/tailwind.css",
    "watch:tailwindcss": "tailwindcss build -i src/stylesheets/_tailwind.css -o src/stylesheets/tailwind.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MatthewRDangle/battlecry.git"
  },
  "author": "Matthew R. Dangle",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/MatthewRDangle/battlecry/issues"
  },
  "homepage": "https://github.com/MatthewRDangle/battlecry#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "electron": "^16.0.6",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.2.6"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "mithril": "^2.0.4"
  }
}
